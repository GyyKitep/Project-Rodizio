package br.com.rodizio.module;

import java.sql.Timestamp;

import br.com.rodizio.controller.form.EstablishmentImageForm;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.Lob;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;

@Entity
@Table(name = "establishment")
public class Images {
	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private Integer id;
	
    @ManyToOne
    @JoinColumn(name = "establishment_id")
    private Integer establishment_id;
    
    @Lob
    private byte[] image_Data;
	private Timestamp created_at;
	
	public Images() {
		
	}
	
	public Images(Integer id, EstablishmentImageForm image) {
		this.establishment = id;
		this.created_at = new Timestamp(System.currentTimeMillis());
		this.image_Data = image.getImageData();
		
		
		
	}
	public Integer getId() {
		return id;
	}
	public Establishment getEstablishment() {
		return establishment;
	}
	
	public void setImageData(byte[] imageData) {
		this.imageData = imageData;
	}
	
	public Timestamp getCreated_at() {
		return created_at;
	}
	
	
    
    
}
